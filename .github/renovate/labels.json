{
  "packageRules": [
    {
      "matchUpdateTypes": ["major"],
      "labels": ["dep/major"]
    },
    {
      "matchUpdateTypes": ["minor"],
      "labels": ["dep/minor"]
    },
    {
      "matchUpdateTypes": ["patch"],
      "labels": ["dep/patch"]
    },
    {
      "matchDatasources": ["helm"],
      "addLabels": ["renovate/helm"]
    },
    {
      "matchDatasources": ["docker"],
      "addLabels": ["renovate/image"]
    },
    {
      "matchPackageNames": ["fluxcd/flux2"],
      "addLabels": ["renovate/flux2"]
    },
    {
      "matchPackageNames": ["k3s-io/k3s"],
      "addLabels": ["renovate/k3s"]
    },
    {
      "matchPackageNames": [
        "ghcr.io/serubin/serubin-net",
        "ghcr.io/serubin/dysautonomia-lounge-website",
        "ghcr.io/j-paterson/personalwebsite",
        "ghcr.io/anaximand/lemonhope"
      ],
      "addLabels": ["renovate/automerge"]
    }
  ]
}
